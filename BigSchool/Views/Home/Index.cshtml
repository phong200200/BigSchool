@model BigSchool.ViewModel.CoursesViewModel
@{
    ViewBag.Title = "Home Page";
}

<ul class="course">
    @foreach (var course in Model.UpcommingCourses)
    {
        <li class="li">
            <div class="date">
                <div class="month">
                    @course.dateTime.ToString("MM")
                </div>
                <div class="day">
                    @course.dateTime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="lecture">
                    @course.Lecture.name

                    @if (course.IsCanceled)
                    {
                        <span class="label label-warning"> Canceled</span>
                    }
                    @if (Model.ShowAction && !course.IsCanceled)
                    {
                        <button class="btn btn-default btn-sm js-toggle-follow" data-user-id="@course.LectureId">Follow</button>
                    }
                </span>
                <span class="category">
                    @course.Category.Name
                </span>
                @if (Model.ShowAction)
                {
                    
                    <button data-course-id="@course.Id" class="btn btn-default btn-sm js-toggle-attendance">Going???</button>
                }

            </div>
        </li>
    }
</ul>
@section scripts
    {
    <script>
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function (e) {
                var button = $(e.target);
                if (button.hasClass("btn-default")) {
                    $.post("/api/attendances", { courseId: button.attr("data-course-id") })
                        .done(function () {
                            button
                                .removeClass("btn-default")
                                .addClass("btn-info")
                                .text("Going?");
                        })
                        .fail(function () {
                            alert("Something Wrong??");
                        });
                } else {
                    $.ajax({
                        url: "/api/attendances" + button.attr("data-course-id"), method: "DELETE"
                    })
                        .done(function () {
                            button
                                .removeClass("btn-info")
                                .addClass("btn-default")
                                .text("Going_ing");
                        })
                        .fail(function () {
                            alert("Something lại fail");
                        });
                }

            });
        });

        $(document).ready(function () {
            $(".js-toggle-follow").click(function (e) {
                var button = $(e.target);
                if (button.hasClass("btn-default")) {
                    $.post("/api/followings", { followeeId: button.attr("data-user-id") })
                        .done(function () {
                            button
                                .removeClass("btn-default")
                                .addClass("btn-info")
                                .text("Follow??");
                        })
                        .fail(function () {
                            alert("Something Wrong?? - followfail");
                        });
                } else {
                    $.ajax({
                        url: "/api/followings" + button.attr("data-user-id"), method: "DELETE"
                    })
                        .done(function () {
                            button
                                .removeClass("btn-info")
                                .addClass("btn-default")
                                .text("Following");
                        })
                        .fail(function () {
                            alert("Something lại fail - followfail");
                        });
                }

            });
        });

